%h2 ユーザー一覧

%table.table
  %thead
    %tr
      %th メールアドレス
      %th{ width: '10%' }
      %th{ width: '10%' }
      %th{ width: '10%' }

  %tbody
    - @users.each do |user|
      %tr
        %td= user.email
        %td= link_to '詳細', admin_user_path(user)
        %td= link_to '編集', edit_admin_user_path(user)
        %td= link_to '削除', admin_user_path(user), method: :delete, data: { confirm: '本当に削除しますか？' }

= link_to '戻る', admin_root_path
